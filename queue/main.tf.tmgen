resource "aws_dynamodb_table" "mail_table" {
  name           = "dynamodb-mailtable-${terraform.workspace}"
  billing_mode   = "PAY_PER_REQUEST"
  hash_key       = "username"

  attribute {
    name = "username"
    type = "S"
  }
}

output "mail_table" {
  value = aws_dynamodb_table.mail_table.name
  description = "mail app table name"
}
